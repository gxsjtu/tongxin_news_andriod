<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <include layout="@layout/sq_header"></include>
        <!--<com.daimajia.slider.library.SliderLayout-->
            <!--android:id="@+id/sq_itemAddImgSlider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"-->
            <!--/>-->
        <ImageView
            android:id="@+id/sq_itemAddImgView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
        <Button
            android:id="@+id/btn_sqGetImgs"
            android:text="添加图片（可多次添加）"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:background="#247C97"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center">
        <RadioButton android:id="@+id/rb_addChannelGY"
            android:text="供应"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/darkgreen"
            />

        <RadioButton android:id="@+id/rb_addChannelCG"
            android:text="采购"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:textColor="@color/darkred"
            android:textSize="20dp"
             />
</LinearLayout>
        <EditText
            android:id="@+id/tv_addChannelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="货物名称（必填），如：冲花边料，船板料"
            android:textSize="16dp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/tv_addChannelQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="数量（必填），如：50吨"
            android:textSize="16dp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/tv_addChannelPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="报价，如：1000元每吨"
            android:textSize="16dp"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/tv_addChannelMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="联系方式（必填），如：15866666666"
            android:textSize="16dp"
            android:layout_margin="5dp"
            />
        <EditText
            android:id="@+id/tv_addChannelContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="联系人，如：张三"
            android:textSize="16dp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/btn_addChannelLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择交货地"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="#247C97"
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp">
        <RadioButton android:id="@+id/rb_addChannelZT"
            android:text="自提"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            />

        <RadioButton android:id="@+id/rb_addChannelFH"
            android:text="发货"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:textSize="16dp"
            />
        </LinearLayout>
        <EditText
            android:id="@+id/tv_addChannelDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="货物详细描述"
            android:layout_margin="5dp"
            android:lines="10"
            android:gravity="top"/>
    </LinearLayout>
</ScrollView>