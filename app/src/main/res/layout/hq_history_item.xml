<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="3">

<TableRow>
    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:textColor="@color/low"
        android:text="最低"/>

    <TextView
        android:id="@+id/tv_priceMin"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/low"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/high"
        android:text="最高"/>

    <TextView
        android:id="@+id/tv_priceMax"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/high"/>

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="均价"/>

    <TextView
        android:id="@+id/tv_priceAvg"
        android:layout_width="70dp"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"/>


</TableRow>

<TableRow>

    <TextView
        android:layout_span="4"
        android:id="@+id/tv_priceChange"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_span="2"
        android:id="@+id/tv_priceDate"
        android:gravity="right"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textColor="@color/nochange"
        android:textSize="13sp"
        />
</TableRow>

</TableLayout>