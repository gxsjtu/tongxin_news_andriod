<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/hq_detail_item_productName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="2"
            android:textSize="14sp"
            android:text="1"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/hq_detail_item_Date"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <TextView
            android:id="@+id/hq_detail_item_Min"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/low"
            android:textSize="13sp"
            android:text="3" />

        <TextView
            android:id="@+id/hq_detail_item_Max"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textSize="13sp"
            android:textColor="@color/high"/>

            <TextView
                android:id="@+id/hq_detail_item_Change"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/low"
            android:textSize="13sp"
            android:text="最低" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:textColor="@color/high"
            android:textSize="13sp"
            android:text="最高" />

        <TextView
            android:id="@+id/hq_detail_item_ChangeText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>