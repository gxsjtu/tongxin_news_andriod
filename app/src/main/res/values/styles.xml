<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@drawable/main_rb_textcolor</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!--<style name="TextAppearance.ShowcaseView.Detail" parent="android:style/TextAppearance">-->
        <!--<item name="android:textColor">#000000</item>-->
    <!--</style>-->
    <!--<style name="TextAppearance.ShowcaseView.Title" parent="android:style/TextAppearance">-->
        <!--<item name="android:textColor">#000000</item>-->
    <!--</style>-->
    <style name="Custom_semi_transparent_demo" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#663d4353</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">知道啦</item>
    </style>



    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">知道啦</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">知道啦</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView">
        <item name="sv_backgroundColor">#330066FF</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">知道啦</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomShowcaseTheme4" parent="ShowcaseView">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">知道啦</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle4</item>
        <item name="sv_detailTextAppearance">@style/CustomText4</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#deffffff</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="CustomTitle4" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="CustomText4" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>
